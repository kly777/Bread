{
  "manifest_version": 2,
  "name": "[DEV] bread",
  "description": "a extension for reading",
  "version": "0.1.28",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "storage",
    "nativeMessaging",
    "tabs",
    "<all_urls>",
    "activeTab",
    "https://edge.microsoft.com/",
    "https://api-edge.cognitive.microsofttranslator.com/",
    "https://translate.googleapis.com/translate_a/single"
  ],
  "summary": "A browser extension for reading enhancement",
  "browser_specific_settings": {
    "gecko": {}
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Bread",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content-scripts/content.css"
      ],
      "js": [
        "content-scripts/content.js"
      ]
    }
  ]
}